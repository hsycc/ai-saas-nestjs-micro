{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/api-gateway/src",
  "generateOptions": {
    "spec": false
  },
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/api-gateway/tsconfig.app.json",
    "plugins": [
      {
        "name": "@nestjs/swagger",
        "options": {
          "classValidatorShim": false,
          "introspectComments": true
        }
      }
    ],
    "watchAssets": true
  },
  "monorepo": true,
  "root": "apps/api-gateway",
  "projects": {
    "api-gateway": {
      "type": "application",
      "root": "apps/api-gateway",
      "entryFile": "main",
      "sourceRoot": "apps/api-gateway/src",
      "compilerOptions": {
        "tsConfigPath": "apps/api-gateway/tsconfig.app.json"
      }
    },
    "auth-svc": {
      "type": "application",
      "root": "apps/auth-svc",
      "entryFile": "main",
      "sourceRoot": "apps/auth-svc/src",
      "compilerOptions": {
        "tsConfigPath": "apps/auth-svc/tsconfig.app.json"
      }
    },
    "order-svc": {
      "type": "application",
      "root": "apps/order-svc",
      "entryFile": "main",
      "sourceRoot": "apps/order-svc/src",
      "compilerOptions": {
        "tsConfigPath": "apps/order-svc/tsconfig.app.json"
      }
    },
    "product-svc": {
      "type": "application",
      "root": "apps/product-svc",
      "entryFile": "main",
      "sourceRoot": "apps/product-svc/src",
      "compilerOptions": {
        "tsConfigPath": "apps/product-svc/tsconfig.app.json"
      }
    },
    "common": {
      "type": "library",
      "root": "libs/common",
      "entryFile": "index",
      "sourceRoot": "libs/common/src",
      "compilerOptions": {
        "tsConfigPath": "libs/common/tsconfig.lib.json"
      }
    },
    "config": {
      "type": "library",
      "root": "libs/config",
      "entryFile": "index",
      "sourceRoot": "libs/config/src",
      "compilerOptions": {
        "tsConfigPath": "libs/config/tsconfig.lib.json"
      }
    },

    "grpc-exceptions": {
      "type": "library",
      "root": "libs/grpc-exceptions",
      "entryFile": "index",
      "sourceRoot": "libs/grpc-exceptions/src",
      "compilerOptions": {
        "tsConfigPath": "libs/grpc-exceptions/tsconfig.lib.json"
      }
    }
  }
}
